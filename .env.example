# City Information Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS - Must be configured for the app to work
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# External API Keys (REQUIRED for full functionality)
OPENWEATHER_API_KEY=your_openweather_api_key_here
GEODB_API_KEY=your_geodb_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment Configuration
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CORS Settings (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=1024

# =============================================================================
# OPTIONAL: LANGSMITH TRACING (for debugging and monitoring)
# =============================================================================

# LangSmith Configuration (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=city-assistant
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# EXTERNAL API ENDPOINTS (usually don't need to change)
# =============================================================================

# GeoDB API
GEODB_API_HOST=wft-geo-db.p.rapidapi.com

# OpenWeatherMap API
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather

# WorldTime API
WORLDTIME_API_URL=http://worldtimeapi.org/api/timezone
